{
  "default_platform": {
    "description": "默认音乐平台",
    "type": "string",
    "default": "qq",
    "enum": ["qq", "netease", "kugou", "kuwo"],
    "enumNames": ["QQ音乐", "网易云音乐", "酷狗音乐", "酷我音乐"]
  },
  "enable_conversion": {
    "description": "启用NCM等专有格式转换功能",
    "type": "bool",
    "default": true
  },
  "auto_install_deps": {
    "description": "自动安装所需依赖",
    "type": "bool",
    "default": true
  }
}